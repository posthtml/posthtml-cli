{
  "name": "posthtml-cli",
  "version": "0.2.8",
  "description": "CLI for posthtml",
  "license": "MIT",
  "repository": "posthtml/posthtml-cli",
  "author": {
    "name": "Ivan Demidov",
    "email": "Scrum@list.ru",
    "url": "https://twitter.com/Scrum_"
  },
  "bin": {
    "posthtml": "cli.js"
  },
  "engines": {
    "node": ">=4"
  },
  "scripts": {
    "commitmsg": "conventional-changelog-lint -e",
    "postpublish": "conventional-changelog -i CHANGELOG.md -s -r 0 && git commit -am \"chore(changelog): Update changelog\"",
    "patch": "np patch --any-branch",
    "minor": "np minor --any-branch",
    "major": "np major --any-branch",
    "lintjs": "eslint ./src/*.js ./test/*.js",
    "lintmd": "eslint --ext md --rule indent: [error, 4] .",
    "pretest": "clinton && npm run lintjs && npm run lintmd",
    "test": "nyc ava",
    "testen": "testen -n -- ava",
    "update": "updtr && ava-codemods --force"
  },
  "files": [
    "cli.js"
  ],
  "keywords": [
    "posthtml",
    "posthtml-runner",
    "cli"
  ],
  "dependencies": {
    "globby": "^6.0.0",
    "path-exists": "^3.0.0",
    "post-load-plugins": "0.0.3",
    "posthtml": "^0.9.0",
    "yargs": "^6.0.0"
  },
  "devDependencies": {
    "ava": "*",
    "ava-codemods": "^0.3.0",
    "babel-eslint": "^7.1.1",
    "clinton": "^0.8.0",
    "conventional-changelog-cli": "^1.2.0",
    "conventional-changelog-lint": "^1.0.0",
    "coveralls": "^2.11.9",
    "cpy": "^4.0.1",
    "eslint": "^3.1.1",
    "eslint-config-standard": "^6.0.1",
    "eslint-formatter-pretty": "^1.0.0",
    "eslint-plugin-ava": "^4.0.0",
    "eslint-plugin-babel": "^4.0.0",
    "eslint-plugin-markdown": "^1.0.0-beta.2",
    "eslint-plugin-promise": "^3.4.0",
    "eslint-plugin-require-path-exists": "^1.1.5",
    "eslint-plugin-standard": "^2.0.1",
    "execa": "^0.5.0",
    "husky": "^0.11.6",
    "np": "^2.7.0",
    "npm": "^3.10.5",
    "nyc": "^9.0.1",
    "posthtml-bem": "^0.2.2",
    "posthtml-css-modules": "^0.1.0",
    "posthtml-custom-elements": "^1.0.3",
    "read-pkg": "^2.0.0",
    "tempfile": "^1.1.1",
    "testen": "^1.8.2",
    "updtr": "^0.2.0"
  },
  "testen": {
    "node": [
      "4",
      "5",
      "6"
    ]
  },
  "posthtml": {
    "customElements": {}
  },
  "eslintConfig": {
    "format": "node_modules/eslint-formatter-pretty",
    "parser": "babel-eslint",
    "plugins": [
      "ava",
      "standard",
      "babel",
      "require-path-exists",
      "markdown"
    ],
    "extends": [
      "standard",
      "plugin:ava/recommended"
    ]
  },
  "clinton": {
    "ignores": [
      "test/**",
      "tmp/**",
      "lib/**",
      "*.{html,jpg}"
    ],
    "rules": {
      "xo": [
        "off"
      ]
    }
  }
}
